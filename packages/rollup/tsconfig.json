{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types":["reflect-metadata"],
    "lib": ["es6", "dom"],
  },
  "exclude": [
    "__tests__",
    "node_modules",
    "dist",
    "tests",
    "jest",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "compileOnSave": false
}
